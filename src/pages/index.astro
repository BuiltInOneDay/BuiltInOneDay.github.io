---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug"
import ProjectsList from "../content/projects.astro";
import Contact from "@components/Contact.astro";
import { BaselineStatus } from 'astro-embed';

// const projects = (await getCollection("projects")).reverse();
const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// const last_projects = projects.slice(0, 5);
const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there</div>
    <div class="text-5xl font-bold bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 to-80% bg-clip-text text-transparent">I'm Anthony Ellsworth</div>
    <div class="text-3xl py-3 font-bold">UX/UI Designer / Web Developer / Entrepreneur</div>
    <div class="py-2">
      <text class="text-lg">
        UX/UI Designer & Front-End Web Developer with 15+ years of experience, leveraging expertise in HTML, CSS, and JavaScript to deliver
user-centric web experiences. Adept at responsive design and cross-browser compatibility, ensuring seamless
functionality across devices and platforms. Passionate about crafting engaging and delightful user interfaces for
websites and applications.
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="https://www.linkedin.com/in/anthonyellsworth/" target="_blank"> Let's connect!</a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">My last projects <span class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 bg-clip-text text-transparent">{"</>"}</span></div>
  </div>

<!-- url="/blog/uxui-payment-dialog-for-europe" -->

