  <HorizontalCard
    title="Orbital Fueling Station - Splash Page"
    img="/post-img-ofs.webp"
    desc="Designed a splash page for a fictional orbital fueling station."
    url="/splash-page-ofs.webp"
    badge="UX/UI, Splash Page"
  />
  <div class="divider my-0"></div> 
  <HorizontalCard
    title="Payment Dialog - Europe"
    img="/post-img-payment-dialog-europe.webp"
    desc="Created a visually appealing and functional payment dialog for European markets, designed in Figma."
    url="https://www.figma.com/proto/s4I9JM3Kee0vZVuzzqtvmY/Payment-Dialog---Europe?content-scaling=responsive&kind=proto&node-id=6-358&page-id=0%3A1&scaling=scale-down&starting-point-node-id=6%3A358"
    badge="UX/UI, Prototype"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="ePro Inc"
    img="/post_img_epro.jpg"
    desc="This website is built in craftCMS 3. The site was built and designed by another agency but asked me to take over.  I help them with updates and maintance. "
    url="https://www.eproinc.com/"
    badge="Dev"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Nissan eBrochures 2024"
    img="/post_img_nissan.jpg"
    desc="Help development components for the new 2024 Nissan eBrochures. They are currently in the process of rolling them out to each model. Here is the 2024 Nissan Leaf eBrochure."
    url="https://www.nissanusa.com/interactivebrochures/electric-hybrid-cars/leaf/leaf-electric-driving/index.html"
    badge="Front-end Dev"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="BMSA Group"
    img="/post_img_bmsa.jpg"
    desc="Took over this website to help keep it running and updated. Planning to redesign and rebuild the site in the future."
    url="https://www.bmsagroup.com/"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog &#9998;</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + createSlug(post.data.title, post.slug)}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
  <a class="btn py-3 text-base" id="blog" href="/blog/">Read More</a>

  <Contact />

</BaseLayout>